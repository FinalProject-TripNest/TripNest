<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="data.mapper.PaymentMapperInter">
	<insert id="savePayment" parameterType="PaymentDto">
		insert into
		PAYMENT(idx,member_useremail,imp_uid,merchant_uid,paid_amount,pg_provider,pg_tid,buyer_name,paid_date)
		values(null,#{member_useremail},#{imp_uid},#{merchant_uid},#{paid_amount},#{pg_provider},#{pg_tid},#{buyer_name}, now())
	</insert>
</mapper>